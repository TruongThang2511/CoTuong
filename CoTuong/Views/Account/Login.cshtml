@{
    Layout = null;
}
<html>
    <head>
    <style>
        body {
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 400px;
            margin: 40px auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 4px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
            font-family: Objectivity;
        }

            .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .form-group input {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border-radius: 4px;
                border: 1px solid #ccc;
            }

            .form-group button {
                background-color: #4CAF50;
                color: #fff;
                padding: 10px 20px;
                font-size: 16px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                display: flex;
                justify-content: center;
                align-items: center;
            }

                .form-group button:hover {
                    background-color: #45a049;
                }
    </style>
    </head> 
    <body>
        <div class="container">
            <h1 style="text-align: center;">
                <a href="/" style="color: #333; text-decoration: none;">Đăng nhập</a>
            </h1>
            <form id="loginForm">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="text" id="Email" name="email" />
                </div>
                <div class="form-group">
                    <label for="password">Mật khẩu:</label>
                    <input type="password" id="Password" name="Password" required>
                </div>
                <div class="form-group" style="display: flex; flex-direction: column;">
                    <button type="submit" id="loginButton">Đăng nhập</button>
                </div>
                <div>
                    <p class="login_dontHaveAcc" style="font-size: 22px; margin-bottom: 0; padding: 24px 52px 0px;">
                        Bạn chưa có tài khoản?
                        <a id="registerButton" style="color: #f05123; font-weight: 600; cursor: pointer">Đăng ký</a>
                    </p>
                </div>
            </form>
        </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/login.js"></script>
    </body>
</html>




